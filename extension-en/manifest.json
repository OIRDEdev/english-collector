{
  "manifest_version": 3,
  "name": "English Collector",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus",
    "offscreen"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/Background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "src/Content/GetContext.js",
        "src/Content/Contexts/youtube.js",
        "src/Content/Contexts/netflix.js",
        "src/Content/Contexts/amazon.js",
        "src/Content/Contexts/disney.js",
        "src/Content/Contexts/max.js",
        "src/Content/Contexts/star.js",
        "src/Content/Contexts/generic.js",
        "src/Content/loader.js",
        "src/Shared/utils/UrlUtils.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "save-word": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Salva a palavra selecionada"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["src/Content/*.js", "src/Content/Streamings/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}