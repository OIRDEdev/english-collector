{
  "manifest_version": 3,
  "name": "English Collector",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage", "contextMenus"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "./Sentences_controllers.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "js/getcontext.js",
        "js/contexts/youtube.js",
        "js/contexts/netflix.js",
        "js/contexts/amazon.js",
        "js/contexts/disney.js",
        "js/contexts/max.js",
        "js/contexts/star.js",
        "js/contexts/generic.js",
        "js/getCaptions.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "save-word": {
      "suggested_key": {
        "default": "Ctrl+Shift+H",
        "mac": "Command+Shift+H"
      },
      "description": "Salva a palavra selecionada"
    }
  }
}